<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/otherPostTitleView"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="@string/postTitle"
        android:textSize="20sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/otherPostDescriptionView"/>

    <TextView
        android:id="@+id/otherPostDescriptionView"
        android:minHeight="80dp"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="@string/postDescription"
        android:textSize="16sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@id/otherPostTitleView"
        app:layout_constraintBottom_toTopOf="@id/other_recycler_chat_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/other_recycler_chat_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/other_text_chat_input"
        app:layout_constraintTop_toBottomOf="@+id/otherPostDescriptionView" />


    <RelativeLayout
        android:id="@+id/other_text_chat_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <EditText
            android:layout_marginStart="16dp"
            android:id="@+id/other_edit_chat_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/other_chat_send_btn"
            android:background="@android:color/transparent"
            android:hint="@string/enter_message"
            android:inputType="text|textCapSentences"
            android:maxLines="6"
            android:autofillHints="@string/enter_message"/>

        <Button
            android:id="@+id/other_chat_send_btn"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="@android:drawable/ic_menu_send"
            android:textColor="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>