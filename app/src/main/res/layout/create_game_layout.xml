<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/gameNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_game"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/gameNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/gameNameEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:autofillHints="@string/game"
        android:inputType="text"
        android:labelFor="@id/gameNameEdit"
        android:layout_margin="5dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/gameDescText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:padding="10dp" />

    <EditText
        android:id="@+id/gameDescEdit"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:autofillHints="@string/description"
        android:inputType="textShortMessage"
        android:labelFor="@id/gameDescEdit"
        android:layout_margin="5dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/createGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_game"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:padding="10dp"/>

</LinearLayout>